#!/usr/bin/env php
<?php

set_time_limit( 0 );

include_once __DIR__ . '/../vendor/autoload.php';

use Symfony\Component\Console\Application;

new Tivnet\WPDB\Config();

$app = new Application( 'WPDB: WordPress DB Manager', '@package_version@' );
$app->addCommands( array(
	new Tivnet\WPDB\Command\ListDumpsCommand(),
	new Tivnet\WPDB\Command\HiCommand(),
	new Tivnet\WPDB\Command\SelfUpdateCommand(),
) );
$app->run();
